<%= form_with model: @articulo, class: 'form' do |form| %>
  <div class="form-group">
    <%= form.label :titulo %>
    <%= form.text_field :titulo, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :contenido %>
    <%= form.text_area :contenido, class: 'form-control' %>
  </div>
  <%= form.submit class: 'btn btn-primary' %>
<% end %>
<%= link_to "Volver al articulo", articulo_path, class: 'btn btn-primary' %>